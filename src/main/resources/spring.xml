<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="app.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="app.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="app.FileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="*.//output.log"/>
    </bean>

    <bean id="cacheFileEventLogger" class="app.CacheFileEventLogger" parent="fileEventLogger">
        <constructor-arg type="int" value="5"/>
    </bean>

    <bean id="app" class="app.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="app.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat"
                  class="java.text.DateFormat"
                  factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>


</beans>